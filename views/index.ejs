<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<script src="assets/scripts/parallax.js"></script>
<script src="assets/scripts/contact.js"></script>
<script src="assets/scripts/countto.js"></script>
<script src="assets/scripts/jquery.easing.min.js"></script>
<script src="assets/scripts/wow.min.js"></script>
<script src="assets/scripts/common.js"></script>
<script>
    $(document).ready(function () {
        $('#login_button').on('click',function (e) {
            e.preventDefault();
            var  user=$('#email').val();
            var pass=$('#password').val();
            if((!user.length>0) && (!(pass.length)>0)){
                $('#snackbar').text("Enter the fields");
                myFunction();
            }
            else if(!user.length>0){
                $('#snackbar').text("Enter username");
                myFunction();
            }
            else if(!pass.length>0)
            {
                $('#snackbar').text("Enter password");
                myFunction();
            }
            else{
                validatelogin(user,pass);
            }

        })

        $('#guest_login_button').on('click',function (e) {
            e.preventDefault();
            var email=$('#guest_email').val();
            if(!email.length>0)
            {
                $('#snackbar').text("Enter your email id");
                myFunction();
            }
            else{
                validatelogin1(email);
            }
        });
    });
    function validatelogin(user,pass) {
        var emailReg =/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
        if (!emailReg.test(user)) {
            $('#snackbar').text("Invalid email");
            myFunction();
        }
        else
        {
            $('#snackbar').text("Sending Request");
            myFunction();
            $.ajax({
                url: '/login',
                type: "POST",
                data: {
                    email: user,
                    password: pass
                },
                success: function(response) {
                    if(response=='success')
                    {
                        localStorage.setItem("email", user);
                        window.location.href='/home';
                    }
                    else
                    {
                        $('#snackbar').text("Invalid Credentials");
                        myFunction();
                    }
                },
                error: function(xhr, status, error) {

                }
            });
        }
    }
    function validatelogin1(user) {
        var emailReg =/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
        if (!emailReg.test(user)) {
            $('#snackbar').text("Invalid email");
            myFunction();
        }
        else
        {
            $('#snackbar').text("Sending Request");
            myFunction();
            $.ajax({
                url: '/guest_login',
                type: "POST",
                data: {
                    email: user
                },
                success: function(response) {
                    if(response=='success')
                    {
                        localStorage.setItem("email", user);
                        window.location.href='/home';
                    }
                    else
                    {
                        $('#snackbar').text("Invalid Credentials");
                        myFunction();
                    }
                },
                error: function(xhr, status, error) {

                }
            });
        }
    }
    function myFunction() {
        var x = document.getElementById("snackbar")
        x.className = "show";
        setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
    }
</script>
<!--SCRIPITS END-->
</body>
</html>
